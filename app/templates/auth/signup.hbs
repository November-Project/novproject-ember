{{partial "alert"}}

<form role="form">
  <div class="form-group {{if error.name 'has-error'}}">
    <label for="name">Full Name</label>
    {{input type="text" id="name" value=model.name class="form-control" placeholder="Full Name"}}
  </div>
  <div class="form-group {{if error.email 'has-error'}}">
    <label for="email">Email</label>
    {{input type="email" id="email" value=model.email class="form-control" placeholder="Email"}}
  </div>
  <div class="form-group {{if error.password 'has-error'}}">
    <label for="password">Password</label>
    {{input type="password" id="password" value=model.password class="form-control" placeholder="Password"}}
    <p class="text-muted">* minimum 6 characters.</p>
  </div>
  <div class="form-group {{if error.confirm 'has-error'}}">
    <label for="confirm">Confirm Password</label>
    {{input type="password" id="confirm" value=confirm class="form-control" placeholder="Confirm Password"}}
  </div>
  <div class="form-group {{if error.gender 'has-error'}}">
    <label>Gender</label>
    {{select-control options=genders
      optionTitlePath="value"
      optionValuePath="value"
      prompt="Select a Gender"
      value=model.gender
      classes="form-control"}}
  </div>
  <div class="form-group {{if error.tribe 'has-error'}}">
    <label>Home Tribe</label>
    {{select-control options=tribes
      optionTitlePath="title"
      prompt="Select a Home Tribe"
      value=model.tribe
      classes="form-control"}}
  </div>
  <div class="form-group {{if error.terms 'has-error'}}">
    <label>
      {{input type="checkbox" id="terms" checked=model.acceptedTerms}} Accept <a target='_blank' href='http://november-project.com/disclaimer/'>Terms and Conditions</a>
    </label>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary pull-right" {{action 'submit'}} data-loading-text="Loading...">Sign Up</button>
  </div>
</form>
