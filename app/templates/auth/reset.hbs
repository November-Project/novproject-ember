{{partial "alert"}}

<form role="form">
  <div class="form-group {{if error.password 'has-error'}}">
    <label for="password">Password</label>
    {{input type="password" id="password" value=password class="form-control" placeholder="Password"}}
    <p class="text-muted">* minimum 6 characters.</p>
  </div>
  <div class="form-group {{if error.confirm 'has-error'}}">
    <label for="confirm">Confirm Password</label>
    {{input type="password" id="confirm" value=confirm class="form-control" placeholder="Confirm Password"}}
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary pull-right" {{action 'submit'}} data-loading-text="Saving...">Save</button>
  </div>
</form>
