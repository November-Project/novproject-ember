<h3>Terms and Conditions</h3>
<form role="form">
  <div class="form-group {{if error.tribe 'has-error'}}">
    <label>Home Tribe</label>
    {{select-control options=tribes
      optionTitlePath="title"
      prompt="Select a Home Tribe"
      value=model.tribe
      classes="form-control"}}
  </div>
  <div class="form-group {{if error.terms 'has-error'}}">
    <label class="checkbox">
      {{input type="checkbox" id="terms" checked=model.acceptedTerms}} Accept <a target='_blank' href='http://november-project.com/disclaimer/'>Terms and Conditions</a>
    </label>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary pull-right" {{action 'submitTerms'}} data-loading-text="Saving...">Save</button>
  </div>
</form>
