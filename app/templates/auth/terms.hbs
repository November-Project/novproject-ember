<h3>Terms and Conditions</h3>
<form role="form">
  <div class="form-group">
  {{view Ember.Select content=controllers.tribes
                      optionValuePath="content"
                      optionLabelPath="content.title"
                      prompt="Select a Tribe"
                      value=user.tribe
                      class="form-control"}}
  </div>
  <div class="form-group">
    <label class="checkbox">
      {{#input type="checkbox" id="terms" checked=hasAcceptedTerms}} Accept <a target='_blank' href='http://november-project.com/disclaimer/'>Terms and Conditions</a>{{/input}}
    </label>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary pull-right" {{action 'submitTerms'}}>Save</button>
  </div>
</form>