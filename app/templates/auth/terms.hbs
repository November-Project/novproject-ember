<h3>Terms and Conditions</h3>
<form role="form">
  <div class="form-group">
    <label for="tribe">Pick Your Tribe</label>
    {{view "select" content="tribes"
                    optionLabelPath="content.title"
                    optionValuePath="content.id"
                    prompt="Select a Tribe"
                    selection="selectedTribe"}}
  </div>
  <div class="form-group">
    <label class="checkbox">
      {{#input type="checkbox"}} Accept <a target='_blank' href='http://november-project.com/disclaimer/'>Terms and Conditions</a>{{/input}}
    </label>
  </div>
  <div class="form-group">
    <button class="btn btn-primary pull-right" {{action 'submitTerms'}}>Save</button>
  </div>
</form>