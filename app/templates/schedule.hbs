<form role="form">
  <div {{bind-attr class="errors.time:has-error :form-group"}}>
    <label for="time">Time</label>
    {{input id="time" class="form-control" placeholder="6:30AM" value=time}}
  </div>
  <div class="form-group">
    <label for="location">Location</label>
    {{view "select" content=controllers.locations.model
                optionValuePath="content"
                optionLabelPath="content.title"
                prompt="Select a Location"
                value=location
                class="form-control"}}
  </div>
  <div class="form-group">
    <button type="button" {{bind-attr class="savable::disabled :btn :btn-primary :pull-right"}} {{action 'save'}}>Save</button>
  </div>
</form>