<form role="form">
  <div class="form-group">
    <label for="recurring" class="checkbox"></label>
    {{input type="checkbox" id="recurring" checked=event.recurring}} Recurring Event
  </div>
  {{#if event.recurring}}
    <div class="well schedule-well">
      <h4>Schedule</h4>
      <div class="form-group">
        <label>Repeat On:</label>
        {{#each day in daysOfWeek}}
          {{input type="checkbox" id=day.word checked=day.checked}} {{day.letter}}
        {{/each}}
      </div>
      <div class="form-group">
        <label>Repeat Every:</label>
        {{view "select" content=weekOptions
                  optionLabelPath="content.label"
                  optionValuePath="content.value"
                  value=event.value
                  class="form-control week-select"}}
      </div>
    </div>
  {{/if}}
  {{#if editingWorkout}}
    {{workout-form model=workout action='saveWorkout' cancel='cancelWorkout'}}
  {{else}}
    <div class="form-group event-item">
      <div class="event-item-select">
        {{view "select" content=workouts
                  optionLabelPath="content.title"
                  prompt="Select a Workout"
                  value=workout
                  class="form-control"}}
      </div>
      <div class="event-item-buttons">
        <button class="btn btn-default" {{action 'editWorkout'}}>Edit</button>
        <button class="btn btn-default" {{action 'newWorkout'}}>New</button>
      </div>
    </div>
  {{/if}}

  {{#if editingLocation}}
    {{location-form model=location action='saveLocation' cancel='cancelLocation'}}
  {{else}}
     <div class="form-group event-item">
      <div class="event-item-select">
        {{view "select" content=locations
                  optionLabelPath="content.title"
                  prompt="Select a Location"
                  value=location
                  class="form-control"}}
      </div>
      <div class="event-item-buttons">
        <button class="btn btn-default" {{action 'editLocation'}}>Edit</button>
        <button class="btn btn-default" {{action 'newLocation'}}>New</button>
      </div>
    </div>
  {{/if}}
</form>
