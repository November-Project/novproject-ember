<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar-items" aria-expanded="false">
        <span class="sr-only"> Toggle Navigation </span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class='navbar-brand'}}<i class="fa fa-home fa-lg"></i>{{/link-to}}
      <a class="navbar-brand" style="padding-left:0;" data-toggle="modal" data-target="#tribe-modal">{{currentTribeTitle}}</a>
    </div>
    {{#if session.user.acceptedTerms }}
      <div id="navbar-items" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          {{#if isAdmin}}
            <li>{{#link-to 'admin'}}Admin{{/link-to}}</li>
          {{/if}}
          <li><a data-toggle="modal" data-target="#tribe-modal">Change City</a></li>
          <li><a {{action 'logout'}}>Logout</a></li>
        </ul>
      </div>
    {{/if}}
  </div>
</nav>

<div class="modal fade" id="tribe-modal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" type="button" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Choose an NP Tribe</h4>
      </div>
      <div class="modal-body">
        <div class="list-group">
          {{#each sorted as |tribe|}}
            {{#if tribe.active}}
              <a class="list-group-item active" href="javascript:;" data-dismiss="modal">{{tribe.title}}</a>
            {{else}}
              <a class="list-group-item" href="javascript:;" data-dismiss="modal" {{action 'changeTribe' tribe}}>{{tribe.title}}</a>
            {{/if}}
          {{/each}}
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default" type="button" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
