<form role="form">
  <div class="form-group">
    <label for="title">Title</label>
    {{input id="title" class="form-control" placeholder="Title" value=model.title}}
  </div>
  <div class="form-group">
    <label for="standard" class="checkbox"></label>
    {{input type="checkbox" id="standard" checked=model.standard}} Save this workout to reuse later?
  </div>
  <div class="form-group">
    <label for="description">Description (Optional)</label>
    {{textarea id="description" class="form-control" placeholder="Description" value=model.description}}
  </div>
  <div class="form-group">
    <label for="reps">Workout Reps (Optional)</label>
    {{input type="number" id="reps" class="form-control" placeholder="Reps" value=reps min="0" step="0.25" pattern="\d+(,\d{2})?"}}
  </div>
  <div class="form-group">
    <label for="allowUserReps" class="checkbox"></label>
    {{input type="checkbox" id="allowUserReps" checked=model.allowUserReps}} Allow users to record reps?
  </div>
  <div class="form-group">
    <label for="time">Workout time (Optional)</label>
    <div id="time" class="time-entry">
      <div>
        {{input type="number" class="form-control" placeholder="min" value=model.minutes min="0" pattern="\d*"}}
        <span>Minutes</span>
      </div>
      <div>
        {{input type="number" class="form-control" placeholder="sec" value=model.seconds min="0" pattern="\d*"}}
        <span>Seconds</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="allowUserTime" class="checkbox"></label>
    {{input type="checkbox" id="allowUserTime" checked=model.allowUserTime}} Allow users to record time?
  </div>
  <div class="form-group">
    <label for="allowUserPR" class="checkbox"></label>
    {{input type="checkbox" id="allowUserPR" checked=model.allowUserPR}} Allow users to record PR?
  </div>
  <div class="form-group">
    <button type="button" class="{{unless savable 'disabled'}} btn btn-primary pull-right" {{action 'save'}}>Save</button>
    <button type="button" class="btn btn-default pull-right cancel" {{action 'cancel'}}>Cancel</button>
  </div>
</form>
