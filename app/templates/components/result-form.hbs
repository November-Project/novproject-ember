<form role="form">
  {{#unless isNotTracked}}
    {{#if allowReps}}
      <div class="form-group">
        <label for="reps">Reps</label>
        {{input value=reps type="number" class="form-control" id="reps" placeholder="Reps" min="0" step="0.01"}}
      </div>
    {{/if}}

    {{#if allowTime}}
      <div class="form-group">
        <label for="time">Time</label>
        <div id="time" class="time-entry">
          <div>
            {{input value=model.minutes type="number" class="form-control" placeholder="min" min="0" pattern="\d*"}}
            <span>Minutes</span>
          </div>
          <div>
            {{input value=model.seconds type="number" class="form-control" placeholder="sec" min="0" pattern="\d*"}}
            <span>Seconds</span>
          </div>
        </div>
      </div>
    {{/if}}

    {{#if allowPR}}
      <div class="form-group">
        <label for="pr" class="checkbox"></label>
        {{input type="checkbox" id="pr" checked=model.pr}} This is a PR!
      </div>
    {{/if}}
  {{else}}
    <h4>Record Attendance</h4>
    <div class="form-group">
      <label for="attendance" class="checkbox"></label>
      {{input type="checkbox" id="attendance" checked=attended}} I was there!
    </div>
  {{/unless}}

  <div class="form-group">
    <button type="button" id="save" class="{{unless savable 'disabled'}} btn btn-primary pull-right" {{action 'save'}} data-loading-text="Saving...">Save</button>
    <button type="button" class="btn btn-default pull-right cancel" {{action 'cancel'}}>Cancel</button>
    {{#unless model.isNew}}
      <button type="button" id="delete" class="btn btn-danger pull-right cancel" {{action 'delete'}} data-loading-text="Deleting...">Delete</button>
    {{/unless}}
  </div>
</form>
