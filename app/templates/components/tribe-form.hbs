<form role="form">
  <div class="form-group">
    <label for="tribe-title">City</label>
    {{input id="tribe-title" class="form-control" placeholder="City" value=model.title}}
  </div>
  <div class="form-group">
    <label for="tirbe-map">Location</label>
    {{google-maps latitude=model.latitude longitude=model.longitude}}
  </div>
  <div class="form-group">
    <button type="button" {{bind-attr class="savable::disabled :btn :btn-primary :pull-right"}} {{action 'save'}}>Save</button>
    <button type="button" class="btn btn-default pull-right cancel" {{action 'cancel'}}>Cancel</button>
  </div>
</form>
