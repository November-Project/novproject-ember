<form role="form">
  <div class="form-group">
    <label for="tribe-title">City</label>
    {{input id="tribe-title" class="form-control" placeholder="City" value=model.title}}
  </div>
  <div class="form-group">
    <label>Days of the Week:</label>
    {{#each daysOfWeek as |day|}}
      {{input type="checkbox" checked=day.checked}} {{day.letter}}
    {{/each}}
  </div>
  <div class="form-group">
    <label for="tribe-map">Central Location</label>
    {{google-maps latitude=latitude longitude=longitude}}
  </div>
  <div class="form-group">
    <button type="button" class="{{unless savable 'disabled'}} btn btn-primary pull-right" {{action 'save'}}>Save</button>
    <button type="button" class="btn btn-default pull-right cancel" {{action 'cancel'}}>Cancel</button>
  </div>
</form>
