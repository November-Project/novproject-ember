{{#each resultTimes as |result|}}
  {{#if result.submitted}}
    {{#link-to 'events.view.results.edit' result.model class="btn btn-primary btn-block btn-lg"}}Edit your {{result.time}} Result{{/link-to}}
  {{else}}
    <button type="button" {{action 'newResult' result.time}} class="btn btn-primary btn-block btn-lg">Record a {{result.time}} Result</button>
  {{/if}}
{{/each}}

{{#if multiTime}}
  <hr style="margin-top: 10px; margin-bottom: 10px;">

  <div class="center">
    <div class="btn-group" role="group">
      {{#each times as |time index|}}
        <button type="button" class="btn btn-default {{unless index 'active'}}" data-time={{time}} {{action 'changeTime' time}}>{{time}}</button>
      {{/each}}
    </div>
  </div>
{{/if}}

<span style="display:block;margin-top:10px;">{{filteredResults.length}} Result(s) Submitted</span>

<hr style="margin-top: 10px; margin-bottom: 0px;">

<div class="people">
  {{#each filteredResults as |result index|}}
    {{result-item model=result index=index workout=workout}}
  {{/each}}
</div>
