<div class="top-margin">
  <div class="list-group">
    {{#link-to 'admin.tribes.new' class="list-group-item"}}
      <h4 class="list-group-item-heading">Create New Tribe</h4>
    {{/link-to}}

    {{#each sorted as |tribe|}}
      {{#link-to 'admin.tribes.edit' tribe class="list-group-item"}}
        <h4 class="list-group-item-heading">{{tribe.title}}</h4>
        <p class="list-group-item-text">Latitude: {{tribe.latitude}}, Longitude: {{tribe.longitude}}</p>
      {{/link-to}}
    {{/each}}
  </div>
</div>
